<?php if(isset($this->freebies)):?>
    <span class="toastercart-item-<?php echo $this->priceOption; ?>" data-sid<?php echo $this->priceOption; ?>="<?php echo $this->sid; ?>"><?php echo $this->translate('free'); ?></span>
<?php else:?>
    <?php if(!empty($this->discountList)):?>
        <div class="toastercart-item-<?php echo $this->priceOption; ?> text-left" data-sid<?php echo $this->priceOption; ?>="<?php echo $this->sid; ?>"><?php echo $this->translate('Unit price');?>: <?php echo $this->currency($this->price); ?>
        <?php foreach($this->discountList as $discountData):?>
            <?php if ($this->taxEnabled): ?>
                <?php $discountData['unitSave'] = round($discountData['unitSave'] + ($discountData['unitSave'] / 100) * $this->taxRate,
                    2); ?>
                <?php $discountData['discount'] = round($discountData['discount'] + ($discountData['discount'] / 100) * $this->taxRate,
                    2); ?>
            <?php endif; ?>
            <?php if($discountData['type'] === 'percent'):?>
                <?php $discount = $this->currency($discountData['unitSave']); ?>
            <?php else:?>
                <?php $discount = $this->currency($discountData['discount']); ?>
            <?php endif;?>
            <?php if(empty($discountData['display_on_checkout'])) continue; ?>
            <?php if($discountData['name'] === 'promo') : ?>
                <?php $message =  $this->translate('On sale'). ': ' . $this->translate('buy now to save') . ' ' . $discount . ' ' . $this->translate('per unit') ?>
            <?php elseif($discountData['name'] === 'quantity_discount') : ?>
                    <?php $message =  $this->translate('Act now'). ': ' . $this->translate('Buying') . ' ' . $this->quantity . ' ' . $this->translate('saves you') .' ' . $discount . ' ' . $this->translate('per unit') ?>
            <?php else: ?>
                <?php $message = ucfirst($discountData['checkout_label']) . ': ' . $this->translate('you save') . ' ' .  $discount . ' ' . $this->translate('per unit')?>
            <?php endif ?>
            <span class="item-discount <?php echo $discountData['checkout_label'];?>"><?php echo $message; ?></span>
        <?php endforeach;?>
        </div>
    <?php else:?>
        <span class="toastercart-item-<?php echo $this->priceOption; ?>" data-nocurrency="<?php echo $this->nocurrency; ?>" data-sid<?php echo $this->priceOption; ?>="<?php echo $this->sid; ?>"><?php echo $this->price; ?></span>
    <?php endif;?>
<?php endif;?>